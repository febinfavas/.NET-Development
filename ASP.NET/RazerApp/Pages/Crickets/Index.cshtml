@page
@model RazerApp.Pages.Crickets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>

    <p>
        Enter Position: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cricket[0].PlayerNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cricket[0].PlayerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cricket[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cricket[0].IplTeam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cricket) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IplTeam)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
